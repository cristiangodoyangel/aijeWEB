---
import { Plus, Minus, MessageCircle } from "lucide-astro";

const services = [
    { id: 1, name: "Mecánica Premium", price: "Cotizar" },
    { id: 2, name: "Mecánica General", price: "Cotizar" },
    { id: 3, name: "Escáner Automotriz", price: "Cotizar" },
    { id: 4, name: "Regeneración DPF Electrónica", price: "Cotizar" },
    { id: 5, name: "Fabricación de Piezas", price: "Cotizar" },
    { id: 6, name: "Afinamiento", price: "Cotizar" },
    { id: 7, name: "Servicio de Asesoría", price: "Cotizar" },
    { id: 8, name: "Pintura de Alta Gama", price: "Cotizar" },
    { id: 9, name: "Diagnóstico Avanzado", price: "Cotizar" },
    { id: 10, name: "Aire Acondicionado", price: "Cotizar" },
    { id: 11, name: "Soldadura Especializada", price: "Cotizar" },
    { id: 12, name: "Asistencia en Ruta", price: "Cotizar" },
];
---

<section
    id="quotation"
    class="py-16 bg-white dark:bg-[#111] transition-colors duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2
                class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
            >
                Cotiza Nuestros Servicios
            </h2>
            <div class="w-36 h-1 bg-primary mx-auto rounded-full"></div>
            <p class="text-gray-600 dark:text-gray-400 mt-4">
                Selecciona los servicios que necesitas y contáctanos
                directamente
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-4">
                {
                    services.map((service) => (
                        <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-zinc-900/50 border border-gray-200 dark:border-zinc-800 rounded-lg hover:border-primary/50 transition-colors shadow-sm dark:shadow-none">
                            <span class="text-gray-800 dark:text-gray-200 font-medium">
                                {service.name}
                            </span>
                            <button
                                class="service-toggle p-2 rounded-full bg-red-500 text-white hover:bg-black hover:text-white transition-all"
                                data-service={service.name}
                                aria-label={`Agregar ${service.name}`}
                            >
                                <Plus class="w-5 h-5 icon-plus" />
                                <Minus class="w-5 h-5 icon-minus hidden" />
                            </button>
                        </div>
                    ))
                }
            </div>

            <div class="lg:col-span-1">
                <div
                    class="sticky top-24 bg-gray-100 dark:bg-zinc-900 p-6 rounded-xl border border-gray-200 dark:border-zinc-800 shadow-xl dark:shadow-2xl"
                >
                    <h3
                        class="text-xl font-bold text-red-500 dark:text-white mb-4"
                    >
                        Tu Selección
                    </h3>

                    <div
                        id="selection-list"
                        class="space-y-2 mb-6 min-h-[100px] text-gray-500 text-sm"
                    >
                        <p class="italic">No has seleccionado servicios aún.</p>
                    </div>

                    <div
                        class="border-t border-gray-200 dark:border-zinc-800 pt-4 mb-6"
                    >
                        <div
                            class="flex justify-between text-gray-500 dark:text-gray-400 text-sm"
                        >
                            <span>Total servicios:</span>
                            <span
                                id="total-count"
                                class="font-bold text-gray-900 dark:text-white"
                                >0</span
                            >
                        </div>
                    </div>

                    <a
                        id="whatsapp-btn"
                        href="#"
                        target="_blank"
                        class="flex items-center justify-center gap-2 w-full py-4 bg-[#25D366] hover:bg-[#128C7E] text-white font-bold rounded-lg transition-colors shadow-lg shadow-green-900/20 opacity-50 pointer-events-none"
                    >
                        <MessageCircle class="w-5 h-5" />
                        Cotizar por WhatsApp
                    </a>

                    <button
                        id="clean-btn"
                        class="mt-3 w-full py-2 text-sm text-gray-500 hover:text-white transition-colors"
                    >
                        Limpiar selección
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const toggles = document.querySelectorAll(".service-toggle");
    const listContainer = document.getElementById("selection-list");
    const totalCount = document.getElementById("total-count");
    const whatsappBtn = document.getElementById("whatsapp-btn");
    const cleanBtn = document.getElementById("clean-btn");

    let selectedServices: string[] = [];

    function updateUI() {
        // Update list
        if (listContainer && whatsappBtn) {
            if (selectedServices.length === 0) {
                listContainer.innerHTML =
                    '<p class="italic">No has seleccionado servicios aún.</p>';
                whatsappBtn.classList.add("opacity-50", "pointer-events-none");
            } else {
                listContainer.innerHTML = selectedServices
                    .map(
                        (s) =>
                            `<div class="flex items-center text-gray-700 dark:text-white"><span class="w-1.5 h-1.5 bg-primary rounded-full mr-2"></span>${s}</div>`,
                    )
                    .join("");
                whatsappBtn.classList.remove(
                    "opacity-50",
                    "pointer-events-none",
                );
            }
        }

        // Update count
        if (totalCount)
            totalCount.textContent = selectedServices.length.toString();

        // Update WhatsApp Link
        const message = `Hola AIJE, me gustaría cotizar los siguientes servicios:%0A%0A- ${selectedServices.map((s) => encodeURIComponent(s)).join("%0A- ")}`;
        if (whatsappBtn)
            whatsappBtn.setAttribute(
                "href",
                `https://wa.me/56948572202?text=${message}`,
            );

        // Update buttons
        toggles.forEach((btn) => {
            const service = btn.getAttribute("data-service");
            const plus = btn.querySelector(".icon-plus");
            const minus = btn.querySelector(".icon-minus");
            if (selectedServices.includes(service!)) {
                btn.classList.remove("bg-red-500", "hover:bg-black");
                btn.classList.add(
                    "bg-green-500",
                    "hover:bg-green-600",
                    "text-white",
                );
                plus?.classList.add("hidden");
                minus?.classList.remove("hidden");
            } else {
                btn.classList.remove("bg-green-500", "hover:bg-green-600");
                btn.classList.add("bg-red-500", "hover:bg-black", "text-white");
                plus?.classList.remove("hidden");
                minus?.classList.add("hidden");
            }
        });
    }

    toggles.forEach((toggle) => {
        toggle.addEventListener("click", () => {
            const service = toggle.getAttribute("data-service");
            if (service) {
                if (selectedServices.includes(service)) {
                    selectedServices = selectedServices.filter(
                        (s) => s !== service,
                    );
                } else {
                    selectedServices.push(service);
                }
                updateUI();
            }
        });
    });

    cleanBtn?.addEventListener("click", () => {
        selectedServices = [];
        updateUI();
    });
</script>

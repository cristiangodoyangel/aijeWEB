---
import ServiceCard from "./ServiceCard.astro";

const services = [
    {
        title: "Mecánica Premium",
        description:
            "Mantención, reparación y diagnóstico para autos de alta gama.",
        image: "premium.webp", // Guessing best fit
    },
    {
        title: "Mecánica General",
        description:
            "Reparaciones y soluciones mecánicas para todo tipo de vehículos.",
        image: "mecanic.webp",
    },
    {
        title: "Escáner Automotriz",
        description:
            "Diagnóstico computarizado y escaneo de sistemas electrónicos.",
        image: "scanner.webp",
    },
    {
        title: "Regeneración DPF",
        description:
            "Limpieza y regeneración de filtros de partículas diésel (DPF).",
        image: "dpf.webp",
    },
    {
        title: "Fabricación de Piezas",
        description: "Fabricación y ajuste de piezas y estructuras a medida.",
        image: "piezas.webp",
    },
    {
        title: "Afinamiento",
        description: "Optimización y ajuste de motor para máximo rendimiento.",
        image: "afinamiento.webp",
    },
    {
        title: "Servicio de Asesoría",
        description:
            "Asesoría profesional para compra y revisión de vehículos.",
        image: "asesoria.webp",
    },
    {
        title: "Pintura de Alta Gama",
        description:
            "Acabados de pintura premium, detailing y protección para vehículos exclusivos.",
        image: "pintura.webp",
    },
    {
        title: "Diagnóstico Avanzado",
        description:
            "Equipos de escaneo y diagnóstico electrónico para todas las marcas de lujo.",
        image: "avanzado.webp",
    },
    {
        title: "Aire Acondicionado",
        description:
            "Servicio y reparación de climatización para máximo confort en tu auto premium.",
        image: "aire.webp",
    },
    {
        title: "Soldadura Especializada",
        description:
            "Soldaduras finas y estructurales, restauración de partes y piezas exclusivas.",
        image: "soldadura.webp",
    },
    {
        title: "Asistencia en Ruta",
        description:
            "Rescate, grúa y asistencia rápida para vehículos de alta gama.",
        image: "asistencia.webp",
    },
];
---

<section
    id="services"
    class="py-16 bg-white dark:bg-[#0a0a0a] transition-colors duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2
                class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
            >
                Nuestros Servicios
            </h2>
            <div class="w-24 h-1 bg-primary mx-auto rounded-full"></div>
            <p class="mt-4 text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Soluciones integrales con los más altos estándares de calidad
                para su vehículo.
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {services.map((service) => <ServiceCard {...service} />)}
        </div>
    </div>
</section>
